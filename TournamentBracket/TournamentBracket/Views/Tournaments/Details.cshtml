@model TournamentBracket.Models.Tournament

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Tournament</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Tournament Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TournamentDate)
        </dd>
        <dt class = "col-sm-2">
            Bracket Options
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BracketOptions)
        </dd>
        <dt class = "col-sm-2">
            Participants
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var participant in Model.Participants)
                {
                    <li>@participant.Name <br />
                        @participant.ImageFileName
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

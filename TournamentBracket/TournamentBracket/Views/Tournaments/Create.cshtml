@model TournamentBracket.Models.Tournament

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tournament</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TournamentDate" class="control-label">Tournament Date</label>
                <input asp-for="TournamentDate" class="form-control" />
                <span asp-validation-for="TournamentDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IncludeLosersBracket" /> Include Losers Bracket
                </label>
            </div>

            <div id="participantsContainer">
                <label>Participants:</label>
                <div class="participant">
                    <input type="text" name="ParticipantNames[0]" class="form-control" placeholder="Participant Name" />
                    <input type="file" name="ParticipantImages[0]" class="form-control-file" />
                </div>
            </div>

            <!--Button to add more participants-->
            <button type="button" id="addParticipantBtn" class="btn btn-primary">Add Participant</button>
            <!-- Bitton to submit the form-->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#addParticipantBtn").click(function () {
                var index = $("#participantsContainer .participant").length;
                var newParticipantHtml = `
                            <div class="participant">
                                        <input type="text" name="ParticipantNames[${index}]" class="form-control" />
                                <input type="file" name="ParticipantImages[${index}]" class="form-control-file" />
                            </div>
                        `;
                $("#participantsContainer").append(newParticipantHtml);
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
